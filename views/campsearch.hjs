<!DOCTYPE html>
<html lang="en">
    <head>
        {{> header }}
    </head>
    <body>
    {{> navbar }}

        <div class="container-fluid" id="campsearch-body">
            <div class="row">
                <div class="col-md-4">
                    <div id="map-options">
                        <h1>{{ title }}</h1>
                        <div class="input-group input-group-lg">
                            <input type="text" id="value" required class="form-control input-lg" placeholder="Search campsites" ng-model="$ctrl.location" value="{{ qs.location }}">
                            <div class="input-group-btn">
                                <!-- submit button-->
                                <button class="btn btn-default btn-lg" type="button" onclick="querySearch()"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                <!--nearby me button-->
                                <button class="btn btn-default btn-lg" type="button"><a href="?nearby=true"><span class="glyphicon" aria-hidden="true">
                                <img class="nearby-icon-sml" src="/img/nearby-icon.png"></img></span></a></button>
                            </div>

                        </div>
                        <div class="checkbox">
                            <label>
                                <input id="automatic" type="checkbox" onclick="checkAuto()"> Search while scrolling
                            </label>
                        </div>
                        <div id="campsites-list" class="container-fluid">
                            <ul></ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div id="map"></div>
                    <script src="js/campsearch.js"></script>
                    <script src="https://maps.googleapis.com/maps/api/js?key={{> API_KEY }}&libraries=geometry,places&callback=initMap" async defer></script>
                </div>
            </div>
        </div>

    {{> bottomJs }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/js/bootstrap-select.min.js"></script>
  </body>
</html>
