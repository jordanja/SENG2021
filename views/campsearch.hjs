<!DOCTYPE html>
<html lang="en">
    <head>
        {{> header }}
    </head>
    <body>
    {{> navbar }}

        <div class="row" id="campsearch-body">
            <div class="col-lg-3">
                <div class="container" id="map-options">
                    <h1>Campsite Search</h1>
                    <!-- used for debugging results-->
                    <div id="results"></div>

                    <div class="input-group input-group-lg">
                        <input type="text" id="value" required class="form-control input-lg" placeholder="Search campsites" ng-model="$ctrl.location" value="{{ qs.location }}">
                        <div class="input-group-btn">
                            <!-- submit button-->
                            <button class="btn btn-default btn-lg" type="button" ng-click="$ctrl.campsiteSearch()" onclick="search()"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                            <!--nearby me button-->
                            <button class="btn btn-default btn-lg" type="button" ng-click="$ctrl.nearbySearch()"
                            onclick="search()"><span class="glyphicon" aria-hidden="true"><img class="nearby-icon-sml" src="/img/nearby-icon.png"></img></span></button>
                        </div>
                    </div>
                    <div id="campsites-list">
                        <ul><li><b>Sydney Gateway Holiday Park </b>30 Majestic Dr, Stanhope Gardens NSW 2768, Australia</li><li><b>Canton Beach Holiday Park </b>1 Oleander St, Canton Beach NSW 2263, Australia</li><li><b>Patonga Camping Ground </b>Bay Street, Patonga NSW 2256, Australia</li><li><b>The Palms at Avoca </b>Carolina Park Rd, Avoca Beach NSW 2251, Australia</li><li><b>Del Rio Riverside Resort </b>76 Chaseling Rd, Webbs Creek NSW 2775, Australia</li><li><b>Norah Head Holiday Park </b>22-30 Victoria St, Norah Head NSW 2263, Australia</li><li><b>Toowoon Bay Holiday Park </b>1 Koongara St, Toowoon Bay NSW 2261, Australia</li><li><b>NRMA Ocean Beach Resort &amp; Holiday Park </b>Sydney Ave, Umina Beach NSW 2257, Australia</li><li><b>NRMA Sydney Lakeside Holiday Park </b>38 Lake Park Rd, North Narrabeen NSW 2101, Australia</li></ul>
                    </div>
                    <!--<form class="form-inline">
                        <input type="text" class="form-control" placeholder="These will be removed" name="searchvalue" id="value" value="{{ qs.location }}"/>
                        <button class="btn btn-default" type="button" onclick="search()">Search</button>
                        <input type="checkbox" name="nearby" id="checkednearby" value="1">Nearby Me</input>
                    </form>-->
                </div>
            </div>
            <div class="col-lg-9">
                <div id="map"></div>
                <script src="js/campsearch.js"></script>
                <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDydgd2jbeRErhSowqagqkqVqARAPUieAw&libraries=geometry,places&callback=initMap" async defer></script>
            </div>
        </div>

    {{> bottomJs }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/js/bootstrap-select.min.js"></script>
  </body>
</html>
