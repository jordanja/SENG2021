<!DOCTYPE html>
<html lang="en">
    <head>
        {{> header }}
    </head>
    <body>
    {{> navbar }}

        <div class="row" id="campsearch-body">
            <div class="col-lg-3">
                <div class="container" id="map-options">
                    <h1>{{ title }}</h1>
                    <!-- used for debugging results-->
                    <div id="results"></div>

                    <div class="input-group input-group-lg">
                        <input type="text" id="value" required class="form-control input-lg" placeholder="Search campsites" ng-model="$ctrl.location" value="{{ qs.location }}">
                        <div class="input-group-btn">
                            <!-- submit button-->
                            <button class="btn btn-default btn-lg" type="button" onclick="querySearch()"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                            <!--nearby me button-->
                            <button class="btn btn-default btn-lg" type="button"
                            onclick="nearSearch()"><span class="glyphicon" aria-hidden="true"><img class="nearby-icon-sml" src="/img/nearby-icon.png"></img></span></button>
                        </div>
                    </div>
                    <div id="campsites-list">
                        <ul></ul>
                    </div>
                    <!--<form class="form-inline">
                        <input type="text" class="form-control" placeholder="These will be removed" name="searchvalue" id="value" value="{{ qs.location }}"/>
                        <button class="btn btn-default" type="button" onclick="search()">Search</button>
                        <input type="checkbox" name="nearby" id="checkednearby" value="1">Nearby Me</input>
                    </form>-->
                </div>
            </div>
            <div class="col-lg-9">
                <div id="map"></div>
                <script src="js/campsearch.js"></script>
                <script src="https://maps.googleapis.com/maps/api/js?key={{> API_KEY }}&libraries=geometry,places&callback=initMap" async defer></script>
            </div>
        </div>

    {{> bottomJs }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/js/bootstrap-select.min.js"></script>
  </body>
</html>
