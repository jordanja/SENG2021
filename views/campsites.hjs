<!DOCTYPE html>
<html lang="en">

<head>
    {{> header }}
    <!-- SOME UGLY STYLE SHEET FROM W3-->
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <script src="js/campsites.js"></script>
</head>

<body>
    {{> navbar }}
    <!-- ugly af facebook button-->


    <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="fb-share-button" data-href=getCurrUrl() data-layout="button" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href=getCurrUrl()>Share</a></div>


    <div class="container" id="campsite-body">
        <h1>{{ place.name }}</h1>
        <h3>{{ place.address }}</h3>
        <h3>{{ place.phone }}</h3>
        <h3>{{ place.rating }} stars</h3>
        <h3><a href="{{place.website}}">{{ place.website }}</a></h3>

        <!--test some slider -->
        <h2 class="w3-center">DO YOU EVEN LIFT BRO?!?!</h2>
        <div class="w3-content" style="max-width:800px;position:relative">
        {{#place_images}}<img class="mySlides" src="{{.}}" style="width:100%">{{/place_images}}


        <a class="w3-btn-floating" style="position:absolute;top:45%;left:0" onclick="plusDivs(-1)">❮</a>
        <a class="w3-btn-floating" style="position:absolute;top:45%;right:0" onclick="plusDivs(1)">❯</a>
        </div>

        <!-- give a 5 day weather forecast of the location-->
        <p>
            <h2>Today's weather:</h2>
            <br><b>The name of this camp site:</b> {{place_name}}</br>
            <br>Weather condition: {{place_condition}}</br>
            <br>Current temperature: {{place_temp}}°C</br>
            <br>Current wind speed: {{place_wind_speed}} m/s</br>
        </p>

        <p>
            <h2>5 day weather forecast:</h2>
            <ul>
                {{#place_5day_weather}}<li>Date: {{ time }}
                    <br />Weather forecast: {{ weather }}
                    <br />Temperature: {{ temp }}°C
                    <br />Humidity: {{ humidity }}%
                    <br />Wind speed: {{ windSpeed }}m/s
                </li>{{/place_5day_weather}}
            </ul>
        </p>

    <!-- some copy and past function for image slider-->
    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlides");
            if (n > x.length) {slideIndex = 1}
            if (n < 1) {slideIndex = x.length}

            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex-1].style.display = "block";
        }

        function getCurrUrl (){
            return document.url;
        }
    </script>

    {{> bottomJs }}
</body>

</html>
